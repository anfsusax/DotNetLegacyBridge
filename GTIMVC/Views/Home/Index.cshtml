@{
    ViewBag.Title = "Início";
}

<section class="page-hero mt-4 mb-5">
    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3">
        <div>
            <h2 class="page-title mb-1">GTI MVC</h2>
            <p class="page-subtitle mb-0">Gerencie clientes de forma simples e moderna.</p>
        </div>
        <div>
            <a href="@Url.Action("Index","Cliente")" class="btn btn-light btn-lg">Ir para Clientes</a>
        </div>
    </div>
</section>

<div class="row gy-4">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Clientes</h5>
                <p class="card-text">Listar, cadastrar, editar e excluir clientes.</p>
                <a href="@Url.Action("Index","Cliente")" class="btn btn-outline-primary">Abrir</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Relatórios</h5>
                <p class="card-text">(Em breve) Acompanhe métricas e exporte dados.</p>
                <a href="#" class="btn btn-outline-secondary" tabindex="-1" aria-disabled="true">Em breve</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Configurações</h5>
                <p class="card-text">(Em breve) Preferências e integrações.</p>
                <a href="#" class="btn btn-outline-secondary" tabindex="-1" aria-disabled="true">Em breve</a>
            </div>
        </div>
    </div>
</div>

<style>
    .page-hero{
        background: linear-gradient(90deg, rgba(29,78,216,.9) 0%, rgba(37,99,235,.9) 60%, rgba(59,130,246,.9) 100%);
        color:#fff; padding:28px 24px; border-radius:.75rem;
        box-shadow:0 12px 28px rgba(2,6,23,.12);
    }
    .page-title{ font-weight:700; letter-spacing:.2px; }
    .page-subtitle{ opacity:.9; }
</style>