@model BTI.MvcX.Models.Cliente

@{
    ViewBag.Title = "Form";
}
<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2 class="m-0">Cadastrar Cliente</h2>
    <a href="@Url.Action("Index","Cliente")" class="btn btn-outline-secondary">Voltar</a>
</div>
<div class="container">
    @using (Html.BeginForm("AddCliente", "Cliente", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.AntiForgeryToken()
        <div class="row g-3 mb-1">
            <div class="col-md-3">
                @Html.LabelFor(m => m.Cpf, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.Cpf, new { @class = "form-control", placeholder = "000.000.000-00" })
            </div>
            <div class="col-md-9">
                @Html.LabelFor(m => m.Nome, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", placeholder = "Nome completo" })
            </div>
        </div>
        <div class="row g-3 mb-1">
            <div class="col-md-3">
                @Html.LabelFor(m => m.Rg, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.Rg, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.DataExpedicao, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.DataExpedicao, new { @type = "date", @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.OrgaoExpedicao, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.OrgaoExpedicao, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.UfExpedicao, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.UfExpedicao, new { @class = "form-control", placeholder = "UF" })
            </div>
        </div>
        <div class="row g-3 mb-1">
            <div class="col-md-3">
                @Html.LabelFor(m => m.DataNascimento, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.DataNascimento, new { @type = "date", @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.Sexo, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.Sexo, new { @class = "form-control", placeholder = "Masculino/Feminino" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.EstadoCivil, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.EstadoCivil, new { @class = "form-control" })
            </div>
        </div>
        <div class="mt-2 mb-2 text-secondary fw-semibold text-uppercase" style="letter-spacing:.08em">Endereço</div>
        <div class="row g-3 mb-1">
            <div class="col-md-2">
                @Html.LabelFor(m => m.Cep, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.Cep, new { @class = "form-control", placeholder = "00000-000" })
            </div>
            <div class="col-md-4">
                @Html.LabelFor(m => m.Logradouro, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.Logradouro, new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(m => m.Numero, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.Numero, new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(m => m.Bairro, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.Bairro, new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.LabelFor(m => m.Uf, new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.Uf, new { @class = "form-control", placeholder = "UF" })
            </div>
        </div>
        <div class="d-grid gap-2 col-3 col-md-2 mx-auto mt-3">
            <button class="btn btn-success" type="submit">Cadastrar</button>
        </div>
    }
</div>


