@model BTI.MvcX.Models.Cliente

@{
    ViewBag.Title = "Excluir";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2 class="m-0">Excluir Cliente</h2>
    <a href="@Url.Action("Index","Cliente")" class="btn btn-outline-secondary">Cancelar</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <div>
                Tem certeza que deseja excluir este cliente?
            </div>
        </div>
        <dl class="row mb-4">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Nome)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Nome)</dd>
        </dl>
        @using (Html.BeginForm("Delete", "Cliente", new { id = Model.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Index","Cliente")" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-danger">Excluir</button>
            </div>
        }
    </div>
</div>